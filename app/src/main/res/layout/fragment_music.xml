<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/include_music_header"></include>

            <com.willian.yunmusic.widget.WrapHeightListView
                android:id="@+id/lv_song_list"
                style="@style/lv_style"
                android:layout_height="0dp"
                android:layout_weight="1"></com.willian.yunmusic.widget.WrapHeightListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>