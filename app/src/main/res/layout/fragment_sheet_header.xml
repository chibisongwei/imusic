<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/icon_all_sheet"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/bg_red" />

        <TextView
            style="@style/tv_content_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/icon_all_sheet"
            android:text="@string/all_sheet" />

        <RelativeLayout
            android:id="@+id/layout_choose_type"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/index_btn_select_selector">

            <TextView
                style="@style/tv_caption_style"
                android:layout_centerVertical="true"
                android:paddingLeft="2dp"
                android:text="@string/all_sheet" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>