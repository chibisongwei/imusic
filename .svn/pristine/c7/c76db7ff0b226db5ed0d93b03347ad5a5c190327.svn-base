<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp">

        <TextView
            style="@style/tv_caption_style"
            android:text="@string/created_list" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_create_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_white2gray_selector"
        android:gravity="center_vertical"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lay_icn_newlist" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_create_list"
                style="@style/tv_other_style"
                android:layout_centerVertical="true"
                android:text="@string/create_new_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_color" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_manage_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_white2gray_selector"
        android:gravity="center_vertical"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lay_icn_manage" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_manage_list"
                style="@style/tv_other_style"
                android:layout_centerVertical="true"
                android:text="@string/manage_song_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_color" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>